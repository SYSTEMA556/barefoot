<!-- app/views/novels/preview.html.erb -->
<div class="container-fluid my-4">
  <div class="row">
    <!-- 左：プレビューエリア -->
    <div class="col-md-8">
      <div class="mb-3">
        <label class="form-label">タイトル</label>
        <div class="form-control-plaintext border rounded px-2 py-1"><%= @novel.title %></div>
      </div>
      <div class="mb-4">
        <label class="form-label">本文プレビュー</label>
        <div class="border rounded px-3 py-2" style="min-height: 12rem; white-space: pre-wrap;">
          <%= @novel.body %>
        </div>
      </div>

      <!-- プレビュー画面から create に送るフォーム -->
      <%= form_with model: @novel, url: novels_path, local: true do |f| %>
        <!-- hidden で全フィールドを再送 -->
        <%= f.hidden_field :title %>
        <%= f.hidden_field :body %>

        <div class="d-flex justify-content-center gap-3">
          <!-- 下書き保存 -->
          <%= button_tag type: "submit",
                         name: "draft", value: "true",
                         class: "btn btn-outline-success btn-lg" do %>
            <i class="bi bi-pencil-square me-1"></i> 下書き保存
          <% end %>

          <!-- 本番投稿 -->
          <%= button_tag type: "submit",
                         name: "publish", value: "true",
                         class: "btn btn-primary btn-lg" do %>
            <i class="bi bi-send-fill me-1"></i> 投稿する
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- 右：（不要のため削除） -->
  </div>
</div>