<!-- app/views/novels/_novel_cards.html.erb -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
  <% novels.each do |novel| %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-1">
            <%= link_to novel_path(novel), class: "text-decoration-none text-dark" do %>
              <i class="bi bi-book"></i> <%= novel.title %>
            <% end %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <% if novel.user %>
              <span class="badge bg-primary">会員</span>
              <%= link_to novel.user.user_name, user_path(novel.user) %>
            <% elsif novel.author_name.present? %>
              <span class="badge bg-secondary">ゲスト</span>
              <%= novel.author_name %>
            <% else %>
              作者不明
            <% end %>
          </h6>
          <p class="card-text flex-grow-1"><%= truncate(novel.body, length: 100) %></p>
          <small class="text-muted">
            <%= novel.published? ? "投稿日：" + novel.created_at.strftime("%Y/%m/%d") : "更新日：" + novel.updated_at.strftime("%Y/%m/%d") %>
          </small>
          <p class="card-text mt-auto">
            <small class="text-muted">
              コメント：<%= novel.comments.size %>
            </small>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%# ページネーション共通で呼び出せるように %>
<%= paginate novels, theme: 'bootstrap-5' if defined?(paginate) %>
