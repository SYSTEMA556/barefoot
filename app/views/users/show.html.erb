<!-- app/views/users/show.html.erb -->
<section class="mb-5">
  <h2 class="h4"><%= @user.user_name %> さんのページ</h2>
  <p>Email: <%= @user.email %></p>

  <h3 class="h5 mt-4">投稿作品一覧</h3>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% @novels.each do |novel| %>
      <div class="col">
        <%= link_to novel_path(novel), class: "card h-100 text-decoration-none text-dark" do %>
          <div class="card-body">
            <h5 class="card-title"><%= novel.title %></h5>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if defined?(paginate) %>
    <nav aria-label="Page navigation" class="mt-4">
      <ul class="pagination justify-content-center">
        <%= paginate @novels, theme: 'bootstrap-5' %>
      </ul>
    </nav>
  <% end %>
</section>
